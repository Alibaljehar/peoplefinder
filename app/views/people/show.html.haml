%h2.heading-large= @person.name
.grid-wrapper
  .grid.grid-1-3
    .inner-block
      = image_tag @person.image.medium, class: 'profile-page'
      %h4.heading-small
        Days worked
      %ul.working_days
        - Person::DAYS_WORKED.each do |day|
          %li{class: ('active' if @person.send(day)), alt: day_name(day)}
            = day_symbol(day)

  .grid.grid-1-3
    .inner-block
      - @person.memberships.each do |membership|
        %h4= membership.role
        = link_to membership.group_name, group_path(membership.group)
      %p= @person.location
      %p= contact_details(@person)
      %p= @person.description

- content_for :edit_this_page do
  = link_to "Edit this page", edit_person_path(@person)