- content_for :edit_this_page do
  = link_to 'Add new person', new_person_path

%h1 Search results
%h4= pluralize(@people.length, "result") + ' returned'

- @people.each do |person|
  .search-result
    .image-background
      = image_tag person.image.medium
    .details
      = link_to person.name, person
      %br
      - person.memberships.each do |membership|
        = [membership.role, breadcrumbs(membership.hierarchy)].compact.join("<br/>").html_safe
      %p= person.location
      %p= person.email
      %p= person.mobile
