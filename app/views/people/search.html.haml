- content_for :breadcrumbs do
  = breadcrumbs(Home.hierarchy << 'Search results')

- content_for :edit_this_page do
  = link_to 'Add new person', new_person_path

#search_results
  %h1.noborder Search results
  .search-hint Select a person's name to view more details, or you can view their team if desired.
  .pagination= pluralize(@people.length, "result") + ' found'

  - @people.each do |person|
    .search-result
      .grid-wrapper
        .grid.grid-1-2
          .inner-block
            .image-background
              = image_tag person.image.medium
            .details
              %h3= link_to person.name, person
              - if person.memberships.empty?
                .meta
              - else
                - person.memberships.each do |membership|
                  .meta
                    = "#{ membership.role }, " if membership.role.present?
                    = link_to membership.group, membership.group

              .meta= person.phone
              .meta
                = mail_to(person.email)

  .add-new-person
    Can't find the person you're looking for? Why not
    = link_to 'add them', new_person_path
