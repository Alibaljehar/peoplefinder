%p#notice= notice
= render partial: 'detail'

- content_for :edit_this_page do
  = link_to 'Edit this page', edit_group_path(@group)

- content_for :breadcrumbs do
  = link_to "Home", "/"
  = render partial: "shared/breadcrumb_spacer"
  = group_breadcrumbs(@group)

- if @group.children.any?
  %div
    %h2
      = child_group_list_title(@group)

    %div.grid-wrapper
      = render partial: "summary", collection: @group.children

- if @group.non_leaderships.any?
  %div
    %h2 Team

    %div.grid-wrapper
      = render partial: "memberships/summary", collection: @group.non_leaderships

%p
  = link_to new_child_group_cta(@group), new_group_group_path(@group)

%p
  = link_to 'Add member', new_group_membership_path(@group)
