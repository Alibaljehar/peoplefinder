= render partial: 'breadcrumbs'

= render partial: 'detail'

%div
  - if display_children_of_group(@group)
    .title_with_edit
      %h2
        = child_group_list_title(@group)
        within
        = @group.name
      = link_to new_child_group_cta(@group), new_group_group_path(@group)

    .grid-wrapper
      = render partial: "subgroup", collection: @group.children

  - if !display_view_all_people_link_for_group(@group)
    = link_to "View all people in #{ @group.name }", id: 'view-all-people'

  - if display_all_people_in_group(@group)
    .title_with_edit
      %h2 People in #{ @group.name }
      = link_to 'Add a new person', new_person_path(group_id: @group.to_param)
    .grid-wrapper
      = render partial: "memberships/summary", collection: @group.non_leaderships
